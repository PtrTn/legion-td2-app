{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1>You can build the following counters</h1>
        </div>
        <div class="row gy-2">
            {% for waveCounter in waveCounters %}
                <div class="col-6">
                        <div class="row">
                            <h2>Wave {{ waveCounter.wave.waveNumber }}</h2>
                            {% for counter in waveCounter.counters %}
                                <div class="col-2 p-1">
                                    <div class="d-flex flex-column align-items-center">
                                        <img class="img-thumbnail" alt="{{ counter.defensiveUnit.name }}" src="https://cdn.legiontd2.com/{{ counter.defensiveUnit.iconPath }}" />
                                        <span class="text-center mt-1">{{ counter.defensiveUnit.name }}</span>
                                        <span>
                                            <img width="12px" height="12px" src="https://static.wikia.nocookie.net/legion-td-2/images/e/e8/Role_dps.png"/>
                                            <span class="text-{% if counter.attackModifier >= 0 %}success{% else %}danger{% endif %}">{{ counter.formattedAttackModifier }}</span>
                                            <img width="12px" height="12px" src="https://static.wikia.nocookie.net/legion-td-2/images/4/43/Role_tank.png"/>
                                            <span class="text-{% if counter.defenseModifier >= 0 %}success{% else %}danger{% endif %}">{{ counter.formattedDefenseModifier }}</span>
                                        </span>
                                    </div>
                                </div>
                            {% else %}
                                <span>No counters</span>
                            {% endfor %}
                        </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
