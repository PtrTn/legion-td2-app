{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row pt-4">
            <h1 class="text-center">You can build the following counters</h1>
            <p class="text-center">The following fighters certain waves based on their attack and armor types</p>
        </div>
        <div class="row gy-2 justify-content-around">
            {% for waveCounter in waveCounters %}
                <div class="col-6 px-3">
                    <div class="row align-items-center pb-2">
                        <div class="col-auto">
                            <h2 class="mb-0">Wave {{ waveCounter.wave.waveNumber }}: {{ waveCounter.wave.unit.name }}</h2>
                        </div>
                        <div class="col-auto">
                            <div>
                                <img width="30px" height="30px" alt="{{ waveCounter.wave.unit.description }}" src="https://cdn.legiontd2.com/{{ waveCounter.wave.unit.iconPath }}" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        {% for counter in waveCounter.counters %}
                            <div class="col-auto pb-2">
                                <div class="d-flex flex-column align-items-center">
                                    <img class="border border-primary rounded" alt="{{ counter.attackingUnit.description }}" src="https://cdn.legiontd2.com/{{ counter.attackingUnit.iconPath }}" />
                                    <span class="text-center mt-1">{{ counter.attackingUnit.name }}</span>
                                    <span class="badge badge-pill bg-success" data-toggle="tooltip" title="Attack {{ counter.formattedAttackModifier }} Defense {{ counter.formattedDefenseModifier }}">
                                        {{ counter.formattedTotalModifier }}
                                    </span>
                                </div>
                            </div>
                        {% else %}
                            <div class="col-3">
                                <span>No counters</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
